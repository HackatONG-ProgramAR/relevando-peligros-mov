<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.relevandopeligros.activity.RegistrarPeligroActivity$PlaceholderFragment"
    android:id="@+id/registrar_peligro">

    <TextView
        android:id="@+id/registrar_peligro_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrar_peligro_titulo_peligro" />

    <EditText
        android:id="@+id/registrar_peligro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrar_peligro_title_label"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/registrar_peligro_descipcion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrar_peligro_title"
        android:text="Descripcion Peligro"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/registrar_peligro_descipcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrar_peligro_descipcion_label"
        android:layout_marginTop="10dp"
        android:lines="4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar Fotox"
        android:id="@+id/button2"
        android:layout_below="@+id/registrar_peligro_descipcion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
