<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout">

    <ImageView
        android:id="@+id/peligro_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@android:drawable/arrow_down_float"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/peligro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/peligro_image"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/peligro_image"
        android:layout_toRightOf="@id/peligro_image"
        android:text="{{This is a title}}"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/peligro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/peligro_image"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/peligro_image"
        android:layout_toRightOf="@id/peligro_image"
        android:text="{{Descripcion test asd asd}}"
        android:maxLines="1"/>s

</RelativeLayout>
